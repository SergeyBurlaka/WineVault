<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood_background"
    android:orientation="vertical">



    <android.support.v7.widget.CardView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="120dp"
        android:id="@+id/card_view_main"
        android:layout_width="350dp"
        android:layout_height="250dp"
        card_view:cardCornerRadius="@dimen/card_album_radius"
       >

        <LinearLayout

            android:orientation="vertical"
            android:layout_margin="3dp"
            android:id="@+id/list_container_bg"
            android:background="@drawable/notebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--Add cardview contents-->

            <TextView
                android:layout_marginTop="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Винный погреб"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText2"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_gravity="center_horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_w"
                android:textColor="@color/background_color_yellow_l"
                android:background="@color/background_color_green"
                android:id="@+id/button_enter"

                />


        </LinearLayout>




    </android.support.v7.widget.CardView>





</LinearLayout>
