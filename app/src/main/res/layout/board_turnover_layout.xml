<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_turnover"
    android:layout_width="255dp"
    android:layout_weight="130"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/window_indent"
    android:id="@+id/accounting_layout"
    android:layout_marginBottom="@dimen/window_indent"
    android:layout_marginRight="@dimen/window_indent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="8.5dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/background_color_white"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_high"
            android:id="@+id/text_view_get_wine"
            android:layout_weight="100"/>

        <TextView
            android:layout_marginTop= "8.5dp"
            android:layout_marginLeft="7.5dp"
            android:textColor="@color/background_color_white"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/consumption"
            android:id="@+id/text_view_consumption"
            android:layout_weight="100"/>

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="46dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tv_list_turnover"
        />

</RelativeLayout>
