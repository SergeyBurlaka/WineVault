<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/layout_bg_accounting"
    android:layout_width="255dp"
    android:layout_weight="130"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/window_indent"
    android:id="@+id/accounting_layout">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <TextView
        android:paddingTop="@dimen/header_indent_top"
        android:layout_marginLeft="7.5dp"
        android:textColor="@color/background_color_white"
        android:textSize="@dimen/header_size"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/get_high"
        android:id="@+id/text_view_get_wine"
        android:textStyle="bold"
        android:layout_weight="100"/>

    <TextView

        android:paddingTop="@dimen/header_indent_top"
        android:layout_marginLeft="7.5dp"
        android:textColor="@color/background_color_white"
        android:textSize="@dimen/header_size"



        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/consumption"
        android:id="@+id/text_view_consumption"
        android:textStyle="bold"
        android:layout_weight="100"/>

  </LinearLayout>

    <LinearLayout
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        >




      <android.support.v7.widget.RecyclerView
          android:layout_marginTop="23dp"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_weight="100"
          android:id="@+id/rv_get_wine"
          />

      <android.support.v7.widget.RecyclerView
          android:layout_marginTop="23dp"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_weight="100"
          android:id="@+id/rv_lost_wine"
          />




    </LinearLayout>




</RelativeLayout>